<div class="container">
	<% if (flashInfo != "") { %><div class="alert alert-info"><%= flashInfo %></div><% } %>
	<% if (flashError != "") { %><div class="alert alert-danger"><%= flashError %></div><% } %>

	<div class="col-sm-4" style="margin: auto;">
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h3 class="panel-title">Forgot Password</h3>
	      <p>We will email you a link to reset your password.</p>
	    </div>
	    <div class="panel-body">
			<form action="/forgot" method="POST">
			<input type="hidden" name="referer" value="<%= referer %>" />
			<input type="hidden" name="csrf" value="<%= _csrf %>" />

			<div class="form-group"><input type="text" class="form-control" name="email" placeholder="Email address" value="" /></div>

			<div class="form-group"><button class="btn btn-lg btn-primary btn-block">Reset Password</button></div>

			</form>
		</div>
	  </div>
	</div>

</div>